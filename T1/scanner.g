GO               : 'go'                 ;
GOTO             : 'goto'               ;
IF               : 'if'                 ;
IMPORT           : 'import'             ;
INTERFACE        : 'interface'          ;
MAP              : 'map'                ;
PACKAGE          : 'package'            ;
